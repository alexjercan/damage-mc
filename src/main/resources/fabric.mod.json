{
	"schemaVersion": 1,
	"id": "damageio",
	"version": "${version}",
	"name": "Damage IO",
	"description": "This is a simple mod that writes to a serial port the damage you take.",
	"authors": [
		"Me!"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/alexjercan/damage-io"
	},
	"license": "CC0-1.0",
	"icon": "assets/damageio/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.damageio.DamageIOMod"
		],
		"client": [
			"com.damageio.DamageIOModClient"
		]
	},
	"mixins": [
		"damageio.mixins.json",
		{
			"config": "damageio.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.16.14",
		"minecraft": "~1.21.8",
